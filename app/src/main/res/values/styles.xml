<resources>

    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar"/>

    <style name="DayTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorTitle">@color/colorTitle</item>
        <item name="colorSubtitle">@color/colorSubtitle</item>
        <item name="colorText">@color/colorText</item>
        <item name="colorTextButton">@color/colorTextButton</item>
        <item name="colorButton">@color/colorButton</item>
        <item name="colorBackground">@color/colorBackground</item>
        <item name="colorTabRipple">@color/colorTabRipple</item>
        <item name="colorTopBackground">@color/colorTopBackground</item>
        <item name="colorTabSelectedText">@color/colorTabSelectedText</item>
        <item name="colorHasRead">@color/colorHasRead</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="searchBoxBackground">@drawable/search_box_background</item>
    </style>

    <style name="NightTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimaryNight</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkNight</item>
        <item name="colorAccent">@color/colorAccentNight</item>
        <item name="colorTitle">@color/colorTitleNight</item>
        <item name="colorSubtitle">@color/colorSubtitleNight</item>
        <item name="colorText">@color/colorTextNight</item>
        <item name="colorTextButton">@color/colorTextButtonNight</item>
        <item name="colorButton">@color/colorButtonNight</item>
        <item name="colorBackground">@color/colorBackgroundNight</item>
        <item name="colorTabRipple">@color/colorTabRippleNight</item>
        <item name="colorTopBackground">@color/colorTopBackgroundNight</item>
        <item name="colorTabSelectedText">@color/colorTabSelectedTextNight</item>
        <item name="colorHasRead">@color/colorHasReadNight</item>
        <item name="android:statusBarColor">@color/colorPrimaryNight</item>
        <item name="searchBoxBackground">@drawable/search_box_background_night</item>
    </style>

    <style name="noAnimDayTheme" parent="DayTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="noAnimNightTheme" parent="NightTheme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="SplashDayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

</resources>
